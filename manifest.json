{
  "name": "Adobe Styles",
  "version": "1.0.0",
  "description": "This is an extension to change adobe styles",
  "manifest_version": 3,
  "author": "Borikin D.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.xd.adobe.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Adobe Styles"
  },
  "content_scripts": [
    {
      "matches": ["https://*.xd.adobe.com/*"],
      "css": ["adobe-styles.css"],
      "js": ["script.js"]
    }
  ],
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}